{
  "name": "@freave/make-pot",
  "version": "0.0.4-beta",
  "description": "Scans files in a given directory for translatable strings. Generates a POT file.",
  "main": "dist/src/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "make-pot": "dist/src/index.js"
