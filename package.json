    "url": "https://github.com/freave/make-pot/issues"
  },
  "homepage": "https://github.com/freave/make-pot#readme",
  "devDependencies": {
    "@types/node": "^18.7.2",
    "@types/yargs": "^17.0.11",
    "typescript": "^4.7.4"
